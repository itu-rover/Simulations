<?xml version="1.0"?>
<launch>
<!-- 
@author: Baran Berk Bağcı-->

  <include file="$(find multimaster_launch)/launch/multimaster_gazebo_robot.launch">
    <arg name="robot_namespace" value="rover_21_description_velodyne"/>
  </include>

  <include file="$(find marsyard)/launch/spawn_marsyard_Grid.launch" />


  <!-- uncomment if you want empty world-->
  <!-- <include
    file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
  </include>  -->

  <!-- Normal marsyard surface-->
  <!-- <include file="$(find marsyard)/launch/marsyard.launch" /> -->
  
  <!-- empty artag environment-->
  <include file="$(find marsyard)/launch/empty_artag.launch" />

  <!-- Tf link for rover base-->
  <node
    name="tf_footprint_base"
    pkg="tf"
    type="static_transform_publisher"
    args="0 0 0 0 0 0 base_link base_footprint 40" />

  <!-- Make urdf from xacro file-->
  <param name="robot_description" command="xacro --inorder $(find rover_21_description_velodyne)/urdf/rover_21_description_velodyne.urdf.xacro"/>

  <!-- Spawn model from urdf-->
  <node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-z 1.8 -urdf -param robot_description -model rover_21_description_velodyne"
    output="screen" />

  <node
    name="fake_joint_calibration"
    pkg="rostopic"
    type="rostopic"
    args="pub /calibrated std_msgs/Bool true" />

  <!-- Load differantial controllers into paramter server-->
  <rosparam command="load" file="$(find rover_21_description_velodyne)/config/control.yaml" />

  <!-- Spawn controllers-->
  <node name="controller_spawner" pkg="controller_manager" type="spawner"
      output="screen" args="rover_joint_publisher rover_velocity_controller"/>

  <!-- twist marker which helped drive rover from rviz-->
  <node pkg="interactive_marker_twist_server" type="marker_server" name="twist_marker_server" output="screen"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <node pkg="twist_mux" type="twist_mux" name="twist_mux">
    <rosparam command="load" file="$(find rover_21_description_velodyne)/config/twist_mux.yaml" />
    <remap from="cmd_vel_out" to="/rover_velocity_controller/cmd_vel"/>
  </node> 
  
</launch>
